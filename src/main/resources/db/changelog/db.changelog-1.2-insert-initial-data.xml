    <changeSet id="1.2.3-insert-user-roles" author="arina">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="user_roles"/>
        </preConditions>

        <!--user admin-->
        <sql>
            INSERT INTO user_roles (user_id, role_id)
            VALUES ((SELECT id FROM users WHERE username = 'admin'),
                    (SELECT id FROM roles WHERE name = 'ROLE_ADMIN'));
        </sql>
        <!--user curator-->
        <sql>
            INSERT INTO user_roles (user_id, role_id)
            VALUES ((SELECT id FROM users WHERE username = 'curator'),
                    (SELECT id FROM roles WHERE name = 'ROLE_CURATOR'));
        </sql>
        <!--user artist with 2 roles-->
        <sql>
            INSERT INTO user_roles (user_id, role_id)
            VALUES ((SELECT id FROM users WHERE username = 'artist'),
                    (SELECT id FROM roles WHERE name = 'ROLE_ARTIST'));
        </sql>
        <sql>
            INSERT INTO user_roles (user_id, role_id)
            VALUES ((SELECT id FROM users WHERE username = 'artist'),
                    (SELECT id FROM roles WHERE name = 'ROLE_VISITOR'));
        </sql>
        <!--user visitor-->
        <sql>
            INSERT INTO user_roles (user_id, role_id)
            VALUES ((SELECT id FROM users WHERE username = 'visitor'),
                    (SELECT id FROM roles WHERE name = 'ROLE_VISITOR'));
        </sql>

        <rollback>
            <!--user admin-->
            <delete tableName="user_roles">
                <where>
                    user_id = (SELECT id FROM users WHERE username = 'admin') AND
                    role_id = (SELECT id FROM roles WHERE name = 'ROLE_ADMIN')
                </where>
            </delete>
            <!--user curator-->
            <delete tableName="user_roles">
                <where>
                    user_id = (SELECT id FROM users WHERE username = 'curator') AND
                    role_id = (SELECT id FROM roles WHERE name = 'ROLE_CURATOR')
                </where>
            </delete>
            <!--user artist-->
            <delete tableName="user_roles">
                <where>
                    user_id = (SELECT id FROM users WHERE username = 'artist') AND
                    role_id IN (
                    (SELECT id FROM roles WHERE name = 'ROLE_ARTIST'),
                    (SELECT id FROM roles WHERE name = 'ROLE_VISITOR')
                    )
                </where>
            </delete>
            <!--user visitor-->
            <delete tableName="user_roles">
                <where>
                    user_id = (SELECT id FROM users WHERE username = 'visitor') AND
                    role_id = (SELECT id FROM roles WHERE name = 'ROLE_VISITOR')
                </where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>